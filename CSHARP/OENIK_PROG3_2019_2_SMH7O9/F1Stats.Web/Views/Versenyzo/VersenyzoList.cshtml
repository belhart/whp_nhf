@model IEnumerable<F1Stats.Web.Models.Versenyzo>

<h2>List of racers</h2>

@if (Model.Count() == 0)
{
    <p>No data in the database</p>
}
else
{
    <table>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().Rajtszam)</th>
            <th>@Html.DisplayNameFor(m => m.First().Nev)</th>
            <th>Datasheet</th>
            <th>Delete</th>
            <th>Edit</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Rajtszam)</td>
                <td>>@Html.DisplayFor(m => item.Nev)</td>
                <td>@Html.ActionLink("[SHOW]", "Details", new { id = item.Rajtszam })</td>
                <td>@Html.ActionLink("[DEL]", "Remove", new { id = item.Rajtszam })</td>
                <td>@Html.ActionLink("[EDIT]", "Edit", new { id = item.Rajtszam })</td>
            </tr>
        }
    </table>
}